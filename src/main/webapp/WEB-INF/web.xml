<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>
    
    <servlet>
        <servlet-name>productDetail.jsp</servlet-name>
        <servlet-class>com.chixing.servlet.ShoesParticulars</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>productDetail.jsp</servlet-name>
        <url-pattern>/email</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>topUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.TopUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>topUIServlet</servlet-name>
        <url-pattern>/top.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buttonUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.ButtonUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buttonUIServlet</servlet-name>
        <url-pattern>/button.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productDetailsUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.ProductDetailsUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productDetailsUIServlet</servlet-name>
        <url-pattern>/productDetails</url-pattern>
    </servlet-mapping>
</web-app>
