<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>
    <!--网页的头部-->
    <servlet>
        <servlet-name>topUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.TopUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>topUIServlet</servlet-name>
        <url-pattern>/top.jsp</url-pattern>
    </servlet-mapping>


    <!--网页的尾部-->
    <servlet>
        <servlet-name>buttonUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.ButtonUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buttonUIServlet</servlet-name>
        <url-pattern>/button.jsp</url-pattern>
    </servlet-mapping>


    <!--商品详情-->
    <servlet>
        <servlet-name>productDetailsUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.ProductDetailsUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productDetailsUIServlet</servlet-name>
        <url-pattern>/productDetails</url-pattern>
    </servlet-mapping>


    <!--用户中心-->
    <servlet>
        <servlet-name>customerCenterUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.CustomerCenterUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>customerCenterUIServlet</servlet-name>
        <url-pattern>/customerCenter</url-pattern>
    </servlet-mapping>
</web-app>
