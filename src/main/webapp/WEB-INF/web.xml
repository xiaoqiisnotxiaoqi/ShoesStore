<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>
    <!--网页的头部-->
    <servlet>
        <servlet-name>topUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.TopUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>topUIServlet</servlet-name>
        <url-pattern>/top.jsp</url-pattern>
    </servlet-mapping>


    <!--网页的尾部-->
    <servlet>
        <servlet-name>buttonUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.ButtonUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buttonUIServlet</servlet-name>
        <url-pattern>/button.jsp</url-pattern>
    </servlet-mapping>


    <!--商品详情-->
    <servlet>
        <servlet-name>productDetailsUIServlet</servlet-name>
        <servlet-class>com.chixing.controller.DetailsOfShoes</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productDetailsUIServlet</servlet-name>
        <url-pattern>/productDetails</url-pattern>
    </servlet-mapping>


    <!--用户中心-->
    <servlet>
        <servlet-name>UpdatePersonalInformationServlet</servlet-name>
        <servlet-class>com.chixing.ui.UpdatePersonalInformationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdatePersonalInformationServlet</servlet-name>
        <url-pattern>/customerCenter</url-pattern>
    </servlet-mapping>




    <!--课堂练习-->
    <servlet>
        <servlet-name>LastLoginTimeServlet</servlet-name>
        <servlet-class>com.chixing.ui.LastLoginTimeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LastLoginTimeServlet</servlet-name>
        <url-pattern>/last</url-pattern>
    </servlet-mapping>

    <!--所有订单-->
    <servlet>
        <servlet-name>AllOrdersUIServlet</servlet-name>
        <servlet-class>com.chixing.ui.AllOrdersUIServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllOrdersUIServlet</servlet-name>
        <url-pattern>/allorsers</url-pattern>
    </servlet-mapping>


   <!-- 用户中心修改资料提交表单-->
    <servlet>
        <servlet-name>UpdatePersonalInformationServlet1</servlet-name>
        <servlet-class>com.chixing.controller.UpdatePersonalInformationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdatePersonalInformationServlet1</servlet-name>
        <url-pattern>/UpdatePersonalInformationServlet</url-pattern>
    </servlet-mapping>

    <!-- 立即购买-->
    <servlet>
        <servlet-name>BuyNowServlet</servlet-name>
        <servlet-class>com.chixing.controller.BuyNowServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BuyNowServlet</servlet-name>
        <url-pattern>/buyNow</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>GetCustomerFile</servlet-name>
        <servlet-class>com.chixing.controller.GetCustomerFile</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetCustomerFile</servlet-name>
        <url-pattern>/fileupload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>com.chixing.ui.FileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/file</url-pattern>
    </servlet-mapping>


</web-app>
